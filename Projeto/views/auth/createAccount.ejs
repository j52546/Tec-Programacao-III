<% include ../partials/header %>
<div class="container">
    <div class="card card-register mx-auto mt-5">
      <div class="card-header">Crie uma conta</div>
      <div class="card-body">
        <form action="/register" id="form_register" method="POST">
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-6">
                <label for="exampleInputName">Nome</label>
                <input required name="name" class="form-control" id="exampleInputName" type="text" aria-describedby="nameHelp" placeholder="Informe seu nome">
              </div>
              <div class="col-md-6">
                <label for="exampleInputLastName">Sobrenome</label>
                <input required name="lastName" class="form-control" id="exampleInputLastName" type="text" aria-describedby="nameHelp" placeholder="Informe seu sobrenome">
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="form-row">
              <div class="col-md-6">
                <label for="userCpf">Cpf</label>
                <input required name="cpf" class="form-control" id="userCpf" type="text" aria-describedby="nameHelp" placeholder="Informe cpf">
              </div>
              <div class="col-md-6">
                <label for="userTel">Telefone/Celular</label>
                <input required name="telephone" maxlength="15" class="form-control" id="userTel" type="text" aria-describedby="nameHelp" placeholder="Informe cel./tel. de contato">
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input required name="email" class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="Informe email">
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-6">
                <label for="password">Senha</label>
                <input required name="password" class="form-control" id="password" type="password" placeholder="Informe senha">
              </div>
              <div class="col-md-6">
                <label for="confirmPassword">Confirme senha</label>
                <input required name="confirm_password" class="form-control" id="confirmPassword" type="password" placeholder="Informe a senha novamente">
              </div>
            </div>
          </div>
          <div class="form-row" id="password_diferent">
            <div class="alert alert-danger" style="width:100%">
              <strong>Error!</strong> Senhas diferentes
            </div>
          </div>
          <button type="submit" form="form_register" class="btn btn-primary btn-block">Criar</button>
        </form>
        <div class="text-center">
          <a class="d-block small mt-3" href="/login">Faça login</a>
          <a class="d-block small" href="/recuperar-senha">Esqueceu senha?</a>
        </div>
      </div>

      <%if('errorToCreateAccount' in locals) {%>
        <div class="alert alert-danger" id="errorToCreateAccount" role="alert">
            Error no servidor, tente novamente mais tarde!
        </div>
        <script>
          setTimeout(() => {
            $('#errorToCreateAccount').hide(500)
          }, 5000)
        </script>
      <%}%>

      <%if('KEY_DRUP' in locals) {%>
        <div class="alert alert-danger" id="errorToCreateAccount" role="alert">
           Usuário já cadastrado!
        </div>
        <script>
          setTimeout(() => {
            $('#errorToCreateAccount').hide(500)
          }, 5000)
        </script>
      <%}%>
    </div>
  </div>

  <script src="/static/assets/script/createAccount/createAccount.js"></script>
<% include ../partials/footer %>